<h1>Usuarios cadastrdos</h1>

<div class="container">

    {{#each users }}
        <div class="item">
            <h2>{{this.name}}</h2>
            <p>{{this.occupation}}</p>
            <div class="actions">
            <a href="/users/{{this.id}}" class="details-btn" >Ver detalhes</a>
            <form action="/users/delete/{{this.id}}" method="post">
                   <input type="submit" value="Excluir" class="delete-btn"> 
            </form>
            <a href="/user/update/{{this.id}}" class="edit-btn">Editar</a>
            </div>
        </div>
    {{/each}}   

</div>