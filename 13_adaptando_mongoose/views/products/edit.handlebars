<div class="container">

    <h1>Editar produto</h1>
<form action="/products/edit" method="POST">
    <input type="hidden" name="id" value="{{product._id}}">
    <div class="form-control">
        <label for="name">Nome do producto:</label>
        <input type="text" name="name" placeholder="Digite o nome do produto" value="{{product.name}}">
    </div>
    <div class="form-control">
        <label for="image">Imagen do producto:</label>
        <input type="text" name="image" placeholder="Image..." value="{{product.image}}">
    </div>
     <div class="form-control">
        <label for="price">Preço do producto:</label>
        <input type="text" name="price" placeholder="Digite o preço do produto" value="{{product.price}}">
    </div>
     <div class="form-control">
        <label for="name">Descrição do producto:</label>
        <textarea name="description" placeholder="Descirçõa do produto">{{product.description}}</textarea>
    </div>
    <input type="submit" value="Editar" class="btn">
</form>

</div>